---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Book a Demo | Human Led AI">
    <Navbar />
    <main class="py-20 lg:py-32">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h1 class="text-4xl sm:text-5xl font-bold text-primary mb-6">
                    Book Your Demo
                </h1>
                <p class="text-xl text-text-muted">
                    See how AI voice agents can fill your calendar and stop you
                    from losing leads.
                </p>
            </div>

            <div
                class="bg-white rounded-3xl border border-gray-100 shadow-xl shadow-primary/5 p-8 lg:p-12"
            >
                <form id="demo-form" class="space-y-6">
                    <!-- Name -->
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-bold text-primary mb-2"
                            >Full Name *</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-action focus:ring-2 focus:ring-action/20 outline-none transition-all"
                            placeholder="John Doe"
                        />
                    </div>

                    <!-- Email -->
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-bold text-primary mb-2"
                            >Email Address *</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-action focus:ring-2 focus:ring-action/20 outline-none transition-all"
                            placeholder="john@example.com"
                        />
                    </div>

                    <!-- Phone -->
                    <div>
                        <label
                            for="phone"
                            class="block text-sm font-bold text-primary mb-2"
                            >Phone Number *</label
                        >
                        <input
                            type="tel"
                            id="phone"
                            name="phone"
                            required
                            class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-action focus:ring-2 focus:ring-action/20 outline-none transition-all"
                            placeholder="(123) 456-7890"
                        />
                    </div>

                    <!-- Business Name -->
                    <div>
                        <label
                            for="business"
                            class="block text-sm font-bold text-primary mb-2"
                            >Business Name *</label
                        >
                        <input
                            type="text"
                            id="business"
                            name="business"
                            required
                            class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-action focus:ring-2 focus:ring-action/20 outline-none transition-all"
                            placeholder="Your Business Name"
                        />
                    </div>

                    <!-- Industry -->
                    <div>
                        <label
                            for="industry"
                            class="block text-sm font-bold text-primary mb-2"
                            >Industry</label
                        >
                        <select
                            id="industry"
                            name="industry"
                            class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-action focus:ring-2 focus:ring-action/20 outline-none transition-all"
                        >
                            <option value="">Select your industry</option>
                            <option value="roofing">Roofing</option>
                            <option value="epoxy">Epoxy & Flooring</option>
                            <option value="landscaping">Landscaping</option>
                            <option value="pools">Pools</option>
                            <option value="retaining-walls"
                                >Retaining Walls</option
                            >
                            <option value="construction">Construction</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <!-- Consent Checkboxes -->
                    <div class="space-y-4 pt-4 border-t border-gray-200">
                        <!-- Transactional Consent (Required) -->
                        <div class="flex items-start gap-3">
                            <input
                                type="checkbox"
                                id="consent-transactional"
                                name="consent-transactional"
                                required
                                class="mt-1 w-5 h-5 rounded border-gray-300 text-action focus:ring-action focus:ring-2"
                            />
                            <label
                                for="consent-transactional"
                                class="text-sm text-text-muted leading-relaxed"
                            >
                                <span class="font-semibold text-primary"
                                    >Required:</span
                                > I consent to receive transactional messages from
                                Human Led AI at the phone number provided. Message
                                frequency may vary. Message & Data rates may apply.
                                Reply HELP for help or STOP to opt-out.
                            </label>
                        </div>

                        <!-- Marketing Consent (Optional) -->
                        <div class="flex items-start gap-3">
                            <input
                                type="checkbox"
                                id="consent-marketing"
                                name="consent-marketing"
                                class="mt-1 w-5 h-5 rounded border-gray-300 text-accent focus:ring-accent focus:ring-2"
                            />
                            <label
                                for="consent-marketing"
                                class="text-sm text-text-muted leading-relaxed"
                            >
                                <span class="font-semibold text-primary"
                                    >Optional:</span
                                > I consent to receive marketing and promotional messages
                                from Human Led AI at the phone number provided. Message
                                frequency may vary. Message & Data rates may apply.
                                Reply HELP for help or STOP to opt-out.
                            </label>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button
                        type="submit"
                        class="w-full px-8 py-4 rounded-xl bg-action text-white font-bold text-lg shadow-xl shadow-action/20 hover:bg-action/90 hover:scale-105 transition-all duration-200"
                    >
                        Book My Demo
                    </button>

                    <!-- Legal Links -->
                    <div class="text-center text-sm text-text-muted pt-4">
                        By submitting this form, you agree to our
                        <a
                            href="/privacy"
                            class="text-action hover:underline font-semibold"
                            >Privacy Policy</a
                        >
                        and
                        <a
                            href="/terms"
                            class="text-action hover:underline font-semibold"
                            >Terms of Service</a
                        >.
                    </div>
                </form>
            </div>

            <!-- Reassurance Section -->
            <div class="mt-12 text-center">
                <div
                    class="inline-flex items-center gap-2 bg-accent/10 px-6 py-3 rounded-full border border-accent/20"
                >
                    <svg
                        class="w-5 h-5 text-accent"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-sm font-semibold text-primary"
                        >Your information is secure and never shared with third
                        parties</span
                    >
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<script>
    const form = document.getElementById("demo-form");
    form?.addEventListener("submit", (e) => {
        e.preventDefault();
        // TODO: Replace with actual GHL form submission or API endpoint
        alert("Form submitted! (This will be connected to Go High Level)");
    });
</script>
